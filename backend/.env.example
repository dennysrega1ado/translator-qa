# Database
DATABASE_URL=postgresql://translator_user:translator_pass@postgres:5432/translator_qa

# Storage Backend (minio or s3)
STORAGE_BACKEND=minio

# MinIO Configuration (used when STORAGE_BACKEND=minio)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=translations
MINIO_SECURE=false

# AWS S3 Configuration (used when STORAGE_BACKEND=s3)
AWS_S3_BUCKET=pangea-data-dev-bedrock-datasets
AWS_REGION=us-east-1

# Option 1: Use AWS SSO Profile (recommended)
AWS_PROFILE=sso-ro-data-dev
# Note: Run "aws sso login --profile sso-ro-data-dev" before starting

# Option 2: Use explicit access keys (leave AWS_PROFILE empty)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Option 3: Use default credentials (leave both AWS_PROFILE and keys empty)
# Will use IAM role, environment variables, or default AWS profile

# Optional: Set to folder prefix if data is in a subfolder
AWS_S3_PREFIX=

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
